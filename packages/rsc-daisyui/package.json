{
  "name": "rsc-daisyui",
  "main": "./dist/index.js",
  "version": "2.1.1",
  "description": "daisyUI for React Server Component",
  "homepage": "https://yoshi6jp.github.io/rsc-daisyui/",
  "keywords": [
    "react",
    "daisyui",
    "component",
    "rsc"
  ],
  "bugs": {
    "url": "https://github.com/yoshi6jp/rsc-daisyui/issues"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "module": "./dist/index.mjs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoshi6jp/rsc-daisyui.git"
  },
  "scripts": {
    "build": "tsup",
    "lint:fixme": "eslint src/",
    "lint": "echo 'disabled lint'",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "publish-pkg": "turbo run build lint && changeset version && changeset publish",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-docs": "^9.1.7",
    "@storybook/addon-links": "^9.1.7",
    "@storybook/addon-onboarding": "^9.1.7",
    "@storybook/react-vite": "^9.1.7",
    "@tailwindcss/postcss": "^4.1.13",
    "@tw-classed/core": "^1.7.0",
    "@types/react": "^19.0.10",
    "daisyui": "^5.1.25",
    "eslint": "^8.57.1",
    "eslint-config-custom": "workspace:*",
    "eslint-plugin-storybook": "^9.1.7",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-github-btn": "^1.4.0",
    "storybook": "^9.1.7",
    "tailwindcss": "^4.1.13",
    "tsconfig": "workspace:*",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@tw-classed/react": "^1.8.1",
    "tailwind-merge": "^3.3.1"
  }
}
