{
  "name": "rsc-daisyui",
  "main": "./dist/index.js",
  "version": "2.0.1",
  "description": "daisyUI for React Server Component",
  "homepage": "https://yoshi6jp.github.io/rsc-daisyui/",
  "keywords": [
    "react",
    "daisyui",
    "component",
    "rsc"
  ],
  "bugs": {
    "url": "https://github.com/yoshi6jp/rsc-daisyui/issues"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "module": "./dist/index.mjs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoshi6jp/rsc-daisyui.git"
  },
  "scripts": {
    "build": "tsup",
    "lint:fixme": "eslint src/",
    "lint": "echo 'disabled lint'",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "publish-pkg": "turbo run build lint && changeset version && changeset publish",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@chromatic-com/storybook": "^3.2.6",
    "@storybook/addon-essentials": "^8.6.6",
    "@storybook/addon-interactions": "^8.6.6",
    "@storybook/addon-links": "^8.6.6",
    "@storybook/addon-onboarding": "^8.6.6",
    "@storybook/addon-storysource": "^8.6.6",
    "@storybook/blocks": "^8.6.6",
    "@storybook/react": "^8.6.6",
    "@storybook/react-vite": "^8.6.6",
    "@storybook/test": "^8.6.6",
    "@tailwindcss/postcss": "^4.0.14",
    "@tw-classed/core": "^1.7.0",
    "@types/react": "^19.0.10",
    "daisyui": "^5.0.4",
    "eslint": "^8.57.1",
    "eslint-config-custom": "workspace:*",
    "eslint-plugin-storybook": "^0.11.4",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-github-btn": "^1.4.0",
    "storybook": "^8.6.6",
    "tailwindcss": "^4.0.14",
    "tsconfig": "workspace:*",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@tw-classed/react": "^1.8.0",
    "tailwind-merge": "^3.0.2"
  }
}
